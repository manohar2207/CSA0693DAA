#include<stdio.h>
#include<string.h>
int main(void)
{
    char mystrg[60];
    int leng, i;
    printf("enter the string you want to reverse: ");
    scanf( "%s", mystrg );
    leng = strlen(mystrg);
    for(i = leng - 1; i >= 0; i--) {
        printf("%c", mystrg[i]);        
    }
    return 0;
}
